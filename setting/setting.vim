" usar la papelera del SO
set clipboard=unnamedplus

" Tabulaciones
set smartindent
set shiftwidth=4
set tabstop=4
set expandtab
set autoindent
filetype indent on

" Cosas varias
set noswapfile
set ignorecase 
set numberwidth=1
set incsearch

" Editor
syntax enable
set mouse=a
set number relativenumber
set encoding=utf-8 

" Muestra la pareja de [] {} y ()
set showmatch
" Ya no aparece -- INSERT --
set noshowmode

" Ubicacion al hacer split de buffers
set splitbelow
set splitright
